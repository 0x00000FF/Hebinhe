@{ 
    var title = "Hebinhe Bin<->Hex Speed Game";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@title</title>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" crossorigin="anonymous">
    
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="container">
            <h2 class="text-center mt-3">HeBinHe</h2>
            <h3 class="text-center">A Base-Converting Speed Game</h3>
            
            <h4 class="my-5 text-center" id="question"></h4>
            
            <input class="form-control" id="answer" placeholder="answer?" />
            
            <div class="mt-5">
                <h4>⏰<span class="mx-2" id="time">00:00</span>✔<span class="mx-2" id="correct">0</span>❌<span class="mx-2" id="incorrect">0</span></h4>
            </div>
        </div>
        <script src="~/game.js"></script>
    </body>
</html>
